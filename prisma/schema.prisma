// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Post {
  id        String     @id @default(cuid())
  title     String
  slug      String     @unique
  content   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  upvotes   Int        @default(0)
  views     Int        @default(0)
  adminPick Boolean    @default(false)
  tags      PostTag[]

  @@index([createdAt])
  @@index([upvotes])
  @@index([adminPick])
}

model Tag {
  id    String     @id @default(cuid())
  name  String     @unique
  slug  String     @unique
  posts PostTag[]
}

model PostTag {
  postId String
  tagId  String
  post   Post @relation(fields: [postId], references: [id])
  tag    Tag  @relation(fields: [tagId], references: [id])

  @@id([postId, tagId])
  @@index([tagId, postId])
}